   File: styles/improved-style.css
   - Variables, accessibility, responsive typography,
     reduced-motion support, and maintainable structure
========================= */

/* =========================
   ROOT VARIABLES
========================= */
:root {
  /* Colors */
  --bg-gradient: linear-gradient(120deg, #f6f6f6, #e0e0f8);
  --primary: #3f5ce6; /* slightly darker for contrast */
  --primary-600: #334fc0;
  --accent: #ffe066;
  --text: #222222;
  --muted: #6b6b7a;
  --card-bg: #ffffff;

  /* Spacing & sizing */
  --container-max: 1200px;
  --gutter: 1.25rem; /* 20px */
  --radius-sm: 6px;
  --radius: 12px;

  /* Shadows & transitions */
  --shadow-sm: 0 4px 12px rgba(0,0,0,0.08);
  --shadow-md: 0 8px 20px rgba(0,0,0,0.12);
  --transition: 200ms ease;
}

/* =========================
   BOX-SIZING RESET (efficient)
========================= */
html { box-sizing: border-box; font-size: 16px; scroll-behavior: smooth; }
*, *::before, *::after { box-sizing: inherit; }

/* =========================
   BASE & BACKGROUND
========================= */
body {
  margin: 0;
  font-family: "Arial", system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", sans-serif;
  font-size: 1rem; /* 16px */
  line-height: 1.6;
  color: var(--text);
  background: var(--bg-gradient);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  min-height: 100vh;
}

/* =========================
   CONTAINER
========================= */
.container {
  width: 90%;
  max-width: var(--container-max);
  margin-left: auto;
  margin-right: auto;
  padding: calc(var(--gutter) * 1) 0;
}

/* =========================
   ACCESSIBILITY UTILITIES
========================= */
/* Skip link for keyboard users */
.skip-link {
  position: absolute;
  left: -9999px;
  top: auto;
  width: 1px;
  height: 1px;
  overflow: hidden;
  z-index: -1;
}
.skip-link:focus {
  left: 1rem;
  top: 1rem;
  width: auto;
  height: auto;
  padding: 0.5rem 1rem;
  background: var(--accent);
  color: #111;
  border-radius: 6px;
  z-index: 1000;
  box-shadow: var(--shadow-sm);
}

/* Screen-reader only */
.sr-only {
  position: absolute !important;
  width: 1px; height: 1px;
  padding: 0; margin: -1px;
  overflow: hidden; clip: rect(0,0,0,0);
  white-space: nowrap; border: 0;
}

/* Focus styles for keyboard users */
:focus {
  outline: none;
}
:focus-visible {
  outline: 3px solid rgba(63, 92, 230, 0.18);
  outline-offset: 3px;
  border-radius: 6px;
}
a:focus-visible, button:focus-visible, input:focus-visible, textarea:focus-visible {
  box-shadow: 0 0 0 6px rgba(63, 92, 230, 0.08);
}

/* =========================
   TYPOGRAPHY (fluid & accessible)
========================= */
h1, h2, h3, h4, h5, h6 { color: #1c1c7c; margin: 0 0 0.5rem 0; line-height: 1.2; }
h1 { font-size: clamp(1.8rem, 2.6vw + 1rem, 2.75rem); }
h2 { font-size: clamp(1.25rem, 1.6vw + 1rem, 2rem); text-align: center; }
p { font-size: 1.0625rem; color: var(--text); margin-bottom: 1rem; }

/* Headings visually consistent */
header h1 { font-size: clamp(1.6rem, 2.8vw + 0.8rem, 2.5rem); margin-bottom: 0.4rem; }

/* Links */
a { color: var(--primary); transition: color var(--transition); text-decoration: none; }
a:hover, a:focus { color: var(--primary-600); text-decoration: underline; }

