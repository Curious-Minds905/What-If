}
.nav-links a:hover, .nav-links a:focus { background: rgba(255,255,255,0.06); color: var(--accent); transform: translateY(-2px); }

/* Mobile nav: stack the links and make them accessible */
.nav-toggle {
  display: none;
  background: transparent;
  border: none;
  color: #fff;
  font-size: 1.25rem;
  padding: 0.5rem;
  cursor: pointer;
}
@media (max-width: 768px) {
  header .container { flex-direction: row; align-items: center; }
  .nav-toggle { display: block; }
  .nav-links {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: linear-gradient(180deg, rgba(63,92,230,0.98), rgba(51,79,192,0.98));
    flex-direction: column;
    align-items: stretch;
    gap: 0;
    padding: 0.5rem;
    transform-origin: top;
    box-shadow: var(--shadow-md);
    display: none; /* toggled with JS via class (e.g. .open) */
  }
  .nav-links.open { display: flex; }
  .nav-links a { margin: 0.25rem 0; padding: 0.75rem 1rem; text-align: center; }
}

